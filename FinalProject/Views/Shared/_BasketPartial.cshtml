@{
    Layout = null;
}

@model List<BasketItem>

@foreach (var item in Model)
{
    <div class="product product-cart add-to-basket">
        <figure class="product-media">
            <a href="product.html">
                <img src="~/assets/images/shop/@item.Product.PosterImage" alt="product" width="80"
                     height="88" />
            </a>
            <button class="btn btn-link btn-close">
                <i class="fas fa-times"></i><span class="sr-only">Close</span>
            </button>
        </figure>
        <div class="product-detail">
            <a href="product.html" class="product-name"></a>
            <div class="price-box">
                <span class="product-quantity">@item.Count</span>
                <span class="product-price">$@item.Product.Price</span>
            </div>
        </div>

    </div>

}
